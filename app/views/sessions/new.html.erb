<div class="login-background">
  <div class="login-container">
    <div class="why-login">Log in<br>
      <div class="signup-link">
        <%=link_to "No account? Click here to join today!", :controller => :users, :action => :new, :class => "signup-link" %>
      </div>
    </div> <br>

    <div class="login-form form-horizontal">
      <%= form_for @user, url: "/sessions", method: :post, class: "input-group form-group" do |f| %>
        <div class="email-field" >
            <%= f.email_field :email, placeholder: "Email", class: "form-control" %>
        </div>

        <div class="password-field">
          <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
        </div>
        <%= f.submit "Log in", class: "login-submit btn btn-primary" %>
      <% end %>

      <%= form_for @user, url: "/sessions", method: "post" do |f| %>
        <span style="display: none">
          <%= f.email_field :email, value: "demo@email.com", class: "form-control" %>
          <%= f.password_field :password, value: "demodemo", class: "form-control"%>
        </span>
        <%= f.submit "Demo log in", class: "demo-submit btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
