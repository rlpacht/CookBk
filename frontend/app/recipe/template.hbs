<div id="recipe-header">
  <span>
    Recipe source and directions:
    <h2 class="name-of-recipe">
    <a
      class="recipe-source"
      href={{recipe.sourceUrl}}
      target="_blank">
      {{recipe.name}}
    </a>
  </h2>
  </span>
</div>

<div class="container-fluid">
  <div id="recipe-holder" class="row">
    <div class="recipe-time panel-body">
      Ready in {{displayTime}}
    </div>

    <div class="ingredients-container col-md-4">
      <ul>
        <strong>
          <span class="ingredients-span">
            Ingredients
          </span>
        </strong>
        <hr>
        {{#each ingredientsArray as |ingredient|}}
          <li class="recipe-ingredients">{{ingredient}}</li>
        {{/each}}
      </ul>
    </div>

    <div class="recipe-picture col-md-3">
      <img class="recipe-img" src={{recipe.largeImgUrl}}>
    </div>

    <div class="recipe-notes-container col-md-4">
      <ul>
        <strong>
          <span class="notes-span">
            Notes
          </span>
        </strong>
        <hr>
        {{#each notes as |note|}}
          {{note-item
            note=note
          }}
        {{/each}}

        {{#if isWritingNote}}
          {{textarea
            value=newNoteText
            action="createNote"
          }}
          <button class="save-note-button btn btn-success"
            {{action "createNote"}}>
            Save
          </button>
        {{else}}
          <button class="add-note-button btn btn-primary"
            {{action "addNewNote"}}>
            Add new Note
          </button>
        {{/if}}
      </ul>
    </div>
  </div>
</div>