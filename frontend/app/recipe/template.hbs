<div id="recipe-header">
  <h2 class="name-of-recipe">
    <a
      class="recipe-source"
      href={{recipe.sourceUrl}}
      target="_blank">
      {{recipe.name}}
    </a>
  </h2>
</div>

<div class="container-fluid">
  <div id="recipe-holder" class="row">
    <div class="recipe-time panel-body">
      Ready in {{displayTime}}
    </div>

    <div class="ingredients-container col-md-6">
      <ul>
        <span class="ingredients-span">Ingredients</span>
        <hr>
        {{#each ingredientsArray as |ingredient|}}
          <li class="recipe-ingredients">{{ingredient}}</li>
          {{!-- TODO: add border-bottom to element to replace hr tag --}}
        {{/each}}
      </ul>
    </div>

    <div class="recipe-picture col-md-5">
      <img class="recipe-img" src={{recipe.largeImgUrl}}>
    </div>

    <div class="recipe-notes-container">
      {{#each notes as |note|}}
        {{note-item
          note=note
        }}
      {{/each}}
    </div>

    {{#if isWritingNote}}
      {{textarea
        value=newNoteText
      }}

      <button class="save-note-button btn btn-success"
        {{action "createNote"}}>
        Save
      </button>
    {{else}}
      <button class="add-note-button btn btn-primary col-sm-5"
        {{action "addNewNote"}}>
        Add new Note
      </button>
    {{/if}}
  </div>
</div>