{{#if isEditing}}
  {{textarea
    value=note.text
    focus-out="saveChanges"
    action="saveChanges"
  }}
{{else}}
  <li class="note">{{note.text}}</li>
  <button class="glyphicon glyphicon-pencil" {{action "editNote"}}></button>
  <button class="glyphicon glyphicon-remove"{{action "deleteNote"}}></button>
{{/if}}